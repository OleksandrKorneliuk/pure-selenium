<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Suite" parallel="tests" thread-count="8">

    <parameter name="grid_url" value="http://localhost:4444/wd/hub"/>

    <listeners>
        <listener class-name="com.solvd.pureSelenium.gui.utils.ScreenshotListener"/>
    </listeners>

    <test name="Chrome Tests" parallel="methods">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.solvd.pureSelenium.gui.pages.desktop.HomePageTest"/>
            <class name="com.solvd.pureSelenium.gui.pages.desktop.MyAccountPageTest"/>
            <class name="com.solvd.pureSelenium.gui.pages.desktop.SearchResultsPageTest"/>
        </classes>
    </test>

    <test name="Firefox Tests" parallel="methods">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.solvd.pureSelenium.gui.pages.desktop.HomePageTest"/>
            <class name="com.solvd.pureSelenium.gui.pages.desktop.CartPageTest"/>
            <class name="com.solvd.pureSelenium.gui.pages.desktop.CheckoutPageTest"/>
        </classes>
    </test>
</suite>
